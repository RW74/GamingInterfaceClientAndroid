<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/topLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0099cc"
    tools:context=".EditActivity">

    <SeekBar
        android:id="@+id/seekWidth"
        android:layout_width="match_parent"
        android:layout_margin="@dimen/seekbar_margin"
        android:layout_height="wrap_content"
        android:layout_gravity="top"
        android:visibility="gone" />

    <android.widget.VerticalSeekBar
        android:id="@+id/seekHeight"
        android:layout_width="wrap_content"
        android:layout_margin="@dimen/seekbar_margin"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:visibility="gone" />

    <Button
        android:id="@+id/btnSave"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:text="@string/activity_edit_button_save" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|center_vertical"
        android:layout_margin="120dp"
        android:text="@string/edit_helpmsg"
        android:textSize="18sp" />

    <Switch
        android:id="@+id/toggleMode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|start"
        android:text="@string/edit_activity_edit_mode" />
</FrameLayout>